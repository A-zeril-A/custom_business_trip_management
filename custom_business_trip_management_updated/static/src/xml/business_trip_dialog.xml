<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="BusinessTripFormSelectionDialog">
        <div class="modal fade" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Business Trip Form Selection</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&amp;times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Selected Quotation:</label>
                            <p><strong><t t-esc="sale_order.name or ''"/></strong></p>
                            <p>Customer: <t t-esc="sale_order.partner_id[1] or ''"/></p>
                            <p>Total Amount: <t t-esc="sale_order.amount_total or 0.0"/></p>
                        </div>
                        
                        <div class="form-group">
                            <label for="form_selection">Select Form:</label>
                            <select class="form-control" name="form_selection">
                                <option value="new">Create New Form (Always Creates a New Form)</option>
                                <t t-foreach="forms" t-as="form">
                                    <option t-att-value="form.id">
                                        <t t-esc="form.name or ''"/> - <t t-esc="form.create_date or ''"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary o_cancel" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary o_confirm">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates> 