<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_formio_form_trip_status_wizard" model="ir.ui.view">
        <field name="name">formio.form.trip.status.wizard.form</field>
        <field name="model">formio.form.trip.status.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Trip Status">
                <group>
                    <field name="form_id" invisible="1"/>
                    <field name="current_status"/>
                    <field name="new_status"/>
                </group>
                <footer>
                    <button name="apply_status_change" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 