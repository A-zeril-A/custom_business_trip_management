<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- noupdate="1" ensures this isn't overwritten on module update unless explicitly told -->

        <!-- Restrict access to the main Forms app menu (formio.menu_formio_root) -->
        <!-- Only users in 'formio.group_formio_admin' (which includes system administrators) will see it. -->
        <!-- This effectively hides it from regular users (base.group_user) who are not also Formio Admins. -->
        <record id="formio.menu_formio_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

        <!-- Restrict access to the inner 'Forms' menu item -->
        <record id="formio.menu_formio_form" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

    </data>
</odoo> 