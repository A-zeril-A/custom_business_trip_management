<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_formio_form_required_fields_wizard" model="ir.ui.view">
        <field name="name">formio.form.required.fields.wizard.form</field>
        <field name="model">formio.form.required.fields.wizard</field>
        <field name="arch" type="xml">
            <form string="Edit Required Fields">
                <p class="alert alert-info">
                    Please fill in all required fields to be able to submit the business trip request.
                </p>
                <group>
                    <field name="form_id" invisible="1"/>
                    <field name="destination"/>
                    <field name="purpose"/>
                    <field name="travel_start_date"/>
                    <field name="travel_end_date"/>
                    <field name="expected_cost"/>
                </group>
                <footer>
                    <button name="apply_changes" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 